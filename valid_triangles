import java.util.ArrayList;
import java.util.Arrays;
import java.util.Collections;
import java.util.List;

public class Day34 {
    public static void main(String[] args) {
        int[] sides ={9 ,22 ,15 ,33 ,34 ,47 ,7 ,42, 10};
        System.out.println(goodTriangles(sides));
    }
    static List<List<Integer>>  goodTriangles( int[] sides){

        List<List<Integer>> result = new ArrayList<>();
            Arrays.sort(sides);
            int count=0;
            for (int i= sides.length-1;i>1;i--){
                int l = 0;
                int r = i-1;
                while (l<r){
                    int sum = sides[l]+sides[r];
                    if (sum>sides[i]){
                        count+=r-l;
                        result.add(Arrays.asList(sides[l],sides[r],sides[i]));
                        r--;
                    }
                    else {
                        l++;
                    }
                }
            }
        System.out.println(count);
        return result;
    }
}
