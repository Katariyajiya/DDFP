class Solution {
    public String longestCommonPrefix(String[] strs) {
        StringBuilder result = new StringBuilder();

        Arrays.sort(strs);

        char[] F=strs[0].toCharArray();
        char[] S =strs[strs.length-1].toCharArray();

        for(int i=0;i<F.length;i++){
            if(F[i]!=S[i]) break;
            result.append(F[i]);
        }
        return result.toString();
    }
}
